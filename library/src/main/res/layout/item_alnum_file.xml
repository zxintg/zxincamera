<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_ffffff">

    <ImageView
        android:id="@+id/iv_album_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@mipmap/default_iamge"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/iv_album_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_15sp"
        tools:text="标题"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignTop="@+id/iv_album_image"
        android:layout_toEndOf="@+id/iv_album_image"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/iv_album_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_12sp"
        android:textColor="@color/color_999999"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/iv_album_title"
        android:layout_toEndOf="@+id/iv_album_image"
        tools:text="张数"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        android:layout_below="@+id/iv_album_image"
        />

</RelativeLayout>